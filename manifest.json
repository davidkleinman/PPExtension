{
    "manifest_version": 3,
    "name": "Privacy Policy Summarizer",
    "description": "A Chrome extension for summarizing privacy policies",
    "version": "1.0.0",
    "icons": {
        "48": "assets/icon.png"
    },
    "permissions": ["activeTab", "tabs", "scripting", "storage"],
    "action": {
        "default_icon": {
            "48": "assets/icon.png"
        },
        "default_popup": "src/popup.html"
    }
}